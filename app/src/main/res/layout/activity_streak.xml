<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFF6FA">

    <!-- Title -->
    <TextView
        android:id="@+id/titleStreakPet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Streak Pet"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Pet Name -->
    <TextView
        android:id="@+id/petName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/titleStreakPet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp" />

    <!-- Main Pet Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/petCard"
        android:layout_width="0dp"
        android:layout_height="350dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="24dp"
        app:cardBackgroundColor="#CFEAF1"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/petName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/petImage"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/pet"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day 3!"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your pet is evolving!"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

            <!-- Progress box -->
            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:orientation="vertical"
                android:background="@drawable/rounded_box"
                android:padding="10dp"
                android:layout_marginTop="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Progress to next level"
                    android:textSize="12sp" />

                <ProgressBar
                    android:id="@+id/progressLevel"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    android:max="7"
                    android:progress="3"
                    android:progressDrawable="@drawable/progress_blue"
                    android:layout_marginTop="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3/7 days"
                    android:textSize="12sp"
                    android:layout_gravity="end"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Rewards Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/rewardCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/petCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Streak Rewards"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="10dp" />

            <!-- Reward Lines -->
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="✔ Day 1: Pet hatches" android:textSize="14sp"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="✔ Day 3: First Evolution" android:textSize="14sp"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="✔ Day 7: Special Ability Unlock" android:textSize="14sp"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="○ Day 50: New Form Unlock" android:textSize="14sp"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="○ Day 100: Customization Unlock" android:textSize="14sp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Back to Home Button -->
    <Button
        android:id="@+id/btnBackHome"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Back to Home"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_large"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
