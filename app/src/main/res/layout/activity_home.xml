<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#E5FAFF">

    <LinearLayout
        android:id="@+id/rootLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/homeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SHORT-TERM MEMORY AID"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#111111"
            android:layout_marginBottom="12dp" />

        <!-- Avatar Panel -->
        <androidx.cardview.widget.CardView
            android:id="@+id/avatarPanel"
            android:layout_width="match_parent"
            android:layout_height="213dp"
            android:layout_marginBottom="16dp"
            android:padding="10dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:id="@+id/avatarInner"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/avatarImage"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginBottom="6dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="avatar"
                    android:src="@drawable/avatar" />

                <TextView
                    android:id="@+id/avatarMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Letâ€™s start something today!"
                    android:textColor="#0A7DA5"
                    android:textSize="15sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Add New Task Button -->
        <Button
            android:id="@+id/addTaskButton"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_button"
            android:text="+ Add New Task"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <!-- XP Overview Panel -->
        <androidx.cardview.widget.CardView
            android:id="@+id/xpPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="5dp"
            android:padding="14dp">

            <LinearLayout
                android:id="@+id/xpInner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/xpTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XP Overview"
                    android:textStyle="bold"
                    android:textColor="#111111"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <!-- Mind XP -->
                <TextView
                    android:id="@+id/mindLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ§  Mind Realm â€“ Wisdom XP"
                    android:textColor="#0A7DA5"
                    android:textSize="14sp" />

                <ProgressBar
                    android:id="@+id/progressMind"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:progressDrawable="@drawable/progress_bar_blue"
                    android:max="100"
                    android:layout_marginTop="4dp" />

                <!-- Power XP -->
                <TextView
                    android:id="@+id/powerLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’ª Power Realm â€“ Strength XP"
                    android:textColor="#A52828"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp" />

                <ProgressBar
                    android:id="@+id/progressPower"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:progressDrawable="@drawable/progress_bar_red"
                    android:max="100"
                    android:layout_marginTop="4dp" />

                <!-- Heart XP -->
                <TextView
                    android:id="@+id/heartLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â¤ï¸ Heart Realm â€“ Spirit XP"
                    android:textColor="#378C3F"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp" />

                <ProgressBar
                    android:id="@+id/progressHeart"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:progressDrawable="@drawable/progress_bar_green"
                    android:max="100"
                    android:layout_marginTop="4dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Level + Streak -->
        <androidx.cardview.widget.CardView
            android:id="@+id/levelStreakCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="5dp"
            android:padding="14dp">

            <LinearLayout
                android:id="@+id/levelStreakInner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/levelBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/levelLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Player Level"
                        android:textColor="#111111" />

                    <TextView
                        android:id="@+id/totalLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lv. 5"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#333333"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/streakBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/streakLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Streak (Daily Tasks)"
                        android:textColor="#111111" />

                    <TextView
                        android:id="@+id/streakText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”¥ 5-Day Combo!"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#F27A00"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Mood Tracker -->
        <androidx.cardview.widget.CardView
            android:id="@+id/moodCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="5dp"
            android:layout_marginTop="16dp"
            android:padding="14dp">

            <LinearLayout
                android:id="@+id/moodInner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/moodGreeting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hi ðŸ‘‹ðŸ˜Š How are you feeling today?"
                    android:textColor="#111111"
                    android:layout_marginBottom="6dp" />

                <Button
                    android:id="@+id/openMoodTracker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_button"
                    android:text="Open Mood Tracker"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Bottom Nav -->
        <LinearLayout
            android:id="@+id/bottomNav"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/navHome"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:contentDescription="nav home"
                android:src="@drawable/home" />

            <ImageView
                android:id="@+id/navTasks"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:contentDescription="nav tasks"
                android:src="@drawable/tasks" />

            <ImageView
                android:id="@+id/navGlobal"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:contentDescription="nav global"
                android:src="@drawable/streaks" />

            <ImageView
                android:id="@+id/navGlobal"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:contentDescription="nav global"
                android:src="@drawable/profile" />

            <ImageView
                android:id="@+id/navGlobal"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:contentDescription="nav global"
                android:src="@drawable/community" />

            <ImageView
                android:id="@+id/navProfile"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:contentDescription="nav profile"
                android:src="@drawable/timer" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
