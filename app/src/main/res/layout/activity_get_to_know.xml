<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4FBFF">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's Get to Know You"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <ScrollView
        android:id="@+id/formScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toTopOf="@id/buttonRow"
        android:paddingHorizontal="25dp"
        android:paddingTop="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- EMAIL -->
            <TextView
                android:text="Email"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/inputEmail"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/input_bg"
                android:hint="e.g name@gmail.com"
                android:paddingHorizontal="15dp" />

            <!-- USERNAME -->
            <TextView
                android:text="Username"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/inputUsername"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/input_bg"
                android:hint="Choose a username"
                android:paddingHorizontal="15dp" />

            <!-- BIRTHDAY -->
            <TextView
                android:text="Birthday"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/inputBirthday"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/input_bg"
                android:hint="dd/mm/yyyy"
                android:paddingHorizontal="15dp" />

            <!-- CONDITION -->
            <TextView
                android:text="Condition Type"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioGroup
                android:id="@+id/conditionGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton android:id="@+id/adhd" android:text="ADHD" />
                <RadioButton android:id="@+id/depression" android:text="Depression" />
                <RadioButton android:id="@+id/both" android:text="Both" />
                <RadioButton android:id="@+id/none" android:text="None / Prefer not to say" />
            </RadioGroup>

            <!-- PASSWORD -->
            <TextView
                android:text="Password"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/inputPassword"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/input_bg"
                android:hint="6+ characters"
                android:inputType="textPassword"
                android:paddingHorizontal="15dp" />

            <TextView
                android:id="@+id/alreadyHaveAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account? Log in"
                android:textColor="#0066CC"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:paddingVertical="10dp" />

        </LinearLayout>
    </ScrollView>

    <!-- BUTTONS -->
    <LinearLayout
        android:id="@+id/buttonRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="25dp"
        android:paddingVertical="25dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/backBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:background="@drawable/back_btn"
            android:text="Back" />

        <Space
            android:layout_width="15dp"
            android:layout_height="1dp" />

        <Button
            android:id="@+id/continueBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="Continue"
            android:textColor="#FFFFFF"
            android:background="@drawable/continue_btn" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
