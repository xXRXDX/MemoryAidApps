<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="12dp"
    android:background="@drawable/bg_card_quest">

    <TextView
        android:id="@+id/tvQuestTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#333333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvBadge"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/tvBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Low"
        android:textColor="#388E3C"
        android:textSize="12sp"
        android:background="@drawable/bg_badge_low"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/ivClock"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_clock"
        android:tint="#888888"
        app:layout_constraintTop_toBottomOf="@id/tvQuestTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today, 8:00 AM"
        android:textSize="12sp"
        android:textColor="#888888"
        app:layout_constraintTop_toTopOf="@id/ivClock"
        app:layout_constraintStart_toEndOf="@id/ivClock"
        android:layout_marginStart="6dp"/>

    <Button
        android:id="@+id/btnAcceptQuest"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:text="Accept Quest"
        android:textAllCaps="false"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/ivClock"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bg_button_outline"
        android:textColor="#555555"/>
</androidx.constraintlayout.widget.ConstraintLayout>
