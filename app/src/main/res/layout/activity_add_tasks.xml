<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFF6FA">

    <!-- Scrollable content above the bottom nav -->
    <ScrollView
        android:id="@+id/scrollArea"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingTop="24dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <!-- Title -->
            <TextView
                android:id="@+id/titleAddTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add New Task"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <!-- Card (rounded white) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="22dp"
                app:cardElevation="6dp"
                android:layout_marginBottom="18dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Custom task label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Custom task"
                        android:textSize="13sp"
                        android:textColor="#222222"
                        android:layout_marginTop="14dp" />

                    <EditText
                        android:id="@+id/editCustomTask"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="What do you need to do?"
                        android:background="@drawable/input_bg"
                        android:padding="12dp"
                        android:layout_marginTop="6dp"
                        android:inputType="text"
                        android:textColor="#000000"/>

                    <!-- Description -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textSize="13sp"
                        android:textColor="#222222"
                        android:layout_marginTop="12dp" />

                    <EditText
                        android:id="@+id/editDescription"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:hint="Add more details..."
                        android:gravity="top"
                        android:background="@drawable/input_bg"
                        android:padding="12dp"
                        android:layout_marginTop="6dp"
                        android:inputType="textMultiLine"
                        android:textColor="#000000"/>

                    <!-- SCHEDULE (inserted BEFORE Priority) -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Schedule"
                        android:textSize="13sp"
                        android:textColor="#222222"
                        android:layout_marginTop="12dp" />

                    <EditText
                        android:id="@+id/editSchedule"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="Select date and time"
                        android:background="@drawable/input_bg"
                        android:padding="12dp"
                        android:focusable="false"
                        android:clickable="true"
                        android:layout_marginTop="6dp"
                        android:textColor="#000000"/>

                    <!-- Priority -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Priority"
                        android:textSize="13sp"
                        android:textColor="#222222"
                        android:layout_marginTop="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start"
                        android:layout_marginTop="8dp"
                        android:weightSum="3">

                        <TextView
                            android:id="@+id/btnHigh"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_weight="1"
                            android:text="High"
                            android:gravity="center"
                            android:textColor="#000000"
                            android:textSize="13sp"/>

                        <TextView
                            android:id="@+id/btnMedium"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_weight="1"
                            android:text="Medium"
                            android:gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:textColor="#000000"
                            android:textSize="13sp"/>

                        <TextView
                            android:id="@+id/btnLow"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_weight="1"
                            android:text="Low"
                            android:gravity="center"
                            android:textColor="#000000"
                            android:textSize="13sp"/>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Bottom rounded buttons row (Cancel + Generate) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="18dp">

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Cancel"
                    android:background="@drawable/btn_large"
                    android:textColor="#0B2A2E"
                    android:layout_marginEnd="12dp"/>

                <Button
                    android:id="@+id/btnGenerate"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Generate"
                    android:background="@drawable/btn_large"
                    android:textColor="#FFFFFF"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom nav (fixed) -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FFFFFF"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/home"
            android:contentDescription="Home" />

        <ImageView
            android:id="@+id/navTasks"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/tasks"
            android:contentDescription="Tasks" />

        <ImageView
            android:id="@+id/navStreaks"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/streaks"
            android:contentDescription="Streaks" />

        <ImageView
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/profile"
            android:contentDescription="Profile" />

        <ImageView
            android:id="@+id/navCommunity"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/community"
            android:contentDescription="Community" />

        <ImageView
            android:id="@+id/navTimer"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/timer"
            android:contentDescription="Timer" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
