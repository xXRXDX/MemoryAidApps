<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <corners android:radius="30dp" />

    <stroke
        android:width="2dp"
        android:color="#44A2DFFF" /> <!-- subtle outer border -->

    <gradient
        android:startColor="#A4CCFF"
        android:centerColor="#72A8E9"
        android:endColor="#4C8BD6"
        android:angle="270" />

    <padding
        android:left="15dp"
        android:top="10dp"
        android:right="15dp"
        android:bottom="10dp" />

</shape>
